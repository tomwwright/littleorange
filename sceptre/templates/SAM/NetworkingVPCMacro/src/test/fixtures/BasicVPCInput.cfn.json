{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Little Orange Basic VPC",
  "Metadata": {
    "cfn-lint": {
      "config": {
        "ignore_checks": [
          "E3001"
        ]
      }
    }
  },
  "Parameters": {
    "VPCCIDR": {
      "Type": "String"
    }
  },
  "Resources": {
    "PlaceholderRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/LittleOrange/",
        "Policies": [
          {
            "PolicyName": "CloudWatchLogs",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "VPC": {
      "Type": "LittleOrange::Networking::VPC",
      "Properties": {
        "AvailabilityZones": 3,
        "CIDR": {
          "Ref": "VPCCIDR"
        }
      }
    }
  },
  "Outputs": {
    "PlaceholderRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "PlaceholderRole",
          "Arn"
        ]
      }
    },
    "VPCCIDR": {
      "Value": {
        "Ref": "VPCCIDR"
      }
    }
  }
}