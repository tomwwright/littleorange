{
  "typeName": "LilOrange::Organizations::Organization",
  "description": "Resource schema for AWS Organizations Organization resource",
  "sourceUrl": "https://github.com/tomwwright/lilorange.git",
  "definitions": {},
  "properties": {
    "Arn": {
      "type": "string"
    },
    "Id": {
      "type": "string",
      "pattern": "^o-[a-z0-9]{10,32}$"
    },
    "MasterAccountArn": {
      "type": "string"
    },
    "MasterAccountId": {
      "type": "string",
      "pattern": "^[0-9]{12}$"
    },
    "MasterAccountEmail": {
      "type": "string"
    },
    "FeatureSet": {
      "description": "Specifies the feature set supported by the organization. Each feature set supports different levels of functionality.",
      "type": "string",
      "enum": [
        "ALL",
        "CONSOLIDATED_BILLING"
      ]
    },
    "AvailablePolicyTypes": {
      "description": "The policy types and associated status for this Organization",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Type": {
            "description": "The name of the policy type.",
            "type": "string"
          },
          "Status": {
            "description": "The status of the policy type as it relates to the associated root. To attach a policy of the specified type to a root or to an OU or account in that root, it must be available in the organization and enabled for that root.",
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [],
  "readOnlyProperties": [
    "/properties/Arn",
    "/properties/AvailablePolicyTypes",
    "/properties/Id",
    "/properties/MasterAccountArn",
    "/properties/MasterAccountId",
    "/properties/MasterAccountEmail"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "additionalIdentifiers": [
    [
      "/properties/Arn"
    ]
  ],
  "handlers": {
    "create": {
      "permissions": [
        "organizations:CreateOrganization",
        "iam:CreateServiceLinkedRole"
      ]
    },
    "read": {
      "permissions": [
        "organizations:DescribeOrganization"
      ]
    },
    "delete": {
      "permissions": [
        "organizations:DeleteOrganization"
      ]
    },
    "list": {
      "permissions": [
        "organizations:DescribeOrganization"
      ]
    }
  }
}